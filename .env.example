# Example .env for telegram-news-aggregator
# Copy to .env and fill values before running

BOT_TOKEN=your_bot_token
CHAT_ID=your_personal_chat_id
LLM_API_KEY=your_llm_api_key
LLM_BASE_URL=https://api.openai.com/v1

# Optional logging & error reporting
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
ERROR_REPORT_URL=

# Optional RSSHub configuration
# Primary RSSHub instance
RSSHUB_BASE_URL=https://rsshub.app
# Fallback RSSHub instances (comma-separated) to try if primary is blocked
RSSHUB_FALLBACKS=https://rsshub.axiss.world,https://rss-hub-cms.zeabur.app/

# Optional LLM token management
# Max characters per article before truncation (default: 800)
ARTICLE_MAX_CHARS=800
# Estimated LLM context limit in characters (~1 token â‰ˆ 4 chars, default: 120000)
LLM_CONTEXT_LIMIT=120000
